<div class="container">
    <div class="row">
        {{#unless tipo_usuario}}
            {{#each notas}}
                <div class="col-md-4">
                    <div class="card text-dark bg-light border-secondary mb-3">
                        <div class="card-header footer d-flex justify-content-between">
                            <p class="card-title fs-4">{{titulo}}
                                <a href="/notes/edit:{{_id}}">
                                    <i class="fas fa-edit ms-3 text-dark"></i>
                                </a>
                                <a href="/notes/delete:{{_id}}">
                                    <i class="fas fa-trash ms-3 text-dark"></i>
                                </a>
                            </p>
                        </div>
                        <img src="/img/{{imagen}}" class="rounded-square mx-auto d-block m-2 img" alt="img">
                        <div class="card-body footer">
                            <p><h6>Precio:</h6>${{precio}}.00 MX 
                                <a href="https://www.facebook.com/people/Arracadas-Jerezanas-Joyer%C3%ADa-Rubi/100057530946181/">
                                    <i class="fa-regular fa-handshake ms-3 fa-2xl"></i>
                                </a>
                            </p>
                            <p><h6>Descripcion:</h6>{{descripcion}}</p>
                        </div>
                    </div>
                </div>
            {{else}}
                <div class="card mx-auto">
                    <div class="card-body">
                        <h1>Bienvenido {{usuario.nombre}}</h1>
                        <p class="lead">No hay articulos actualmente.</p>
                        {{#unless usuario.type}}
                            <a href="/notes/add" class="btn btn-success btn-block">Agregar nuevo producto</a>
                        {{/unless}}
                    </div>
                </div>
            {{/each}}
        {{else}}
            {{#each notas}}
                <div class="col-md-4">
                    <div class="card text-dark bg-light border-secondary mb-3">
                        <div class="card-header footer d-flex justify-content-between">
                            <p class="card-title fs-4">{{titulo}}
                                {{!-- <a href="/notes/edit:{{_id}}">
                                    <i class="fas fa-edit ms-3 text-dark"></i>
                                </a>
                                <a href="/notes/delete:{{_id}}">
                                    <i class="fas fa-trash ms-3 text-dark"></i>
                                </a> --}}
                            </p>
                        </div>
                        <img src="/img/{{imagen}}" class="rounded-square mx-auto d-block m-2 img" alt="img">
                        <div class="card-body footer">
                            <p><h6>Precio:</h6>${{precio}}.00 MX 
                                <a href="https://www.facebook.com/people/Arracadas-Jerezanas-Joyer%C3%ADa-Rubi/100057530946181/">
                                    <i class="fa-regular fa-handshake ms-3 fa-2xl"></i>
                                </a>
                            </p>
                            <p><h6>Descripcion:</h6>{{descripcion}}</p>
                        </div>
                    </div>
                </div>
            {{else}}
                <div class="card mx-auto">
                    <div class="card-body">
                        <h1>Bienvenido {{usuario.nombre}}</h1>
                        <p class="lead">No hay articulos actualmente.</p>
                        {{#unless usuario.type}}
                            <a href="/notes/add" class="btn btn-success btn-block">Agregar nuevo producto</a>
                        {{/unless}}
                    </div>
                </div>
            {{/each}}
        {{/unless}}
    </div>
    <div class="row">
        {{#if pages}}
            <nav class="mx-auto">
                <ul class="pagination">
                    {{!-- PRIMERA PAGINA --}}
                    {{#equal current 1}}
                        <li class="page-item disabled mr-1">
                            <a href="#" class="page-link">Inicio</a>
                        </li>
                    {{else}}
                        <li class="page-item mr-1">
                            <a href="/notes/1" class="page-link">Inicio</a>
                        </li>
                    {{/equal}}
                    {{!-- PAGINAS INTERNAS --}}
                    {{#for current pages}}
                        {{{this}}}
                    {{/for}}
                    {{!-- ULTIMA PAGINA --}}
                    {{#equal current pages}}
                        <li class="page-item disabled">
                            <a href="#" class="page-link">Fin</a>
                        </li>
                    {{else}}
                        <li class="page-item">
                            <a href="/notes/{{pages}}" class="page-link">Fin</a>
                        </li>
                    {{/equal}}
                </ul>
            </nav>
        {{/if}}
        {{!-- {{current}}<br>
        {{pages}} --}}
    </div>
</div>
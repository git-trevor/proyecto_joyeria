<div class="col-md-6 mx-auto">
    <div class="card border-secondary">
        <div class="card-header footer">
            <h3>Nuevo Producto</h3>
        </div>
        <div class="card-body">
            <form action="/notes/new-note" method="POST">
                <div class="form-group mb-3">
                    <input type="text" name="titulo" class="form-control" placeholder="Nombre" autofocus="" value="{{titulo}}">
                </div>
                <div class="form-group mb-3">
                    <textarea name="descripcion" class="form-control" placeholder="Descripcion" >{{descripcion}}</textarea>
                </div>
                <div class="form-group mb-3">
                    <input type="number" name="precio" class="form-control" placeholder="Precio" value="{{precio}}">
                </div>
                <div class="form-group mb-3">
                    <input type="file" name="imagen" class="form-control" value="{{imagen}}">
                </div>
                <div class="form-group d-grid gap-2">
                    <button class="btn btn-outline-secondary text-wrap" type="submit">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>